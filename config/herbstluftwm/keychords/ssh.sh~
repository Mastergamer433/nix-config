hc() {
    herbstclient "$@"
}

Mod=Mod4
sshKeys=( h d D p )

# Build the command to unbind the keys
sshKeysUnbind=(  )
for k in "${sshKeys[@]}" Escape ; do
    sshKeysUnbind+=( , keyunbind "$k" )
done
hc keybind $appMod-f chain \
    '->' keybind "${sshKeys[0]}" chain "${sshKeysUnbind[@]}" , spawn emacsclient -e "(keo/wm-open-dired \"home\")" \
    '->' keybind "${sshKeys[1]}" chain "${sshKeysUnbind[@]}" , spawn emacsclient -e "(keo/wm-open-dired \"dotfiles\")" \
    '->' keybind "${sshKeys[2]}" chain "${sshKeysUnbind[@]}" , spawn emacsclient -e "(keo/wm-open-dired \"downloads\")" \
    '->' keybind "${sshKeys[3]}" chain "${sshKeysUnbind[@]}" , spawn emacsclient -e "(keo/wm-open-dired \"projects\")" \
    '->' keybind Escape             chain "${sshKeysUnbind[@]}"
